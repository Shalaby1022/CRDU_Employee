@model CRDU_eMP.Models.Employee // Replace with the correct namespace for your model

<h2>Delete Employee</h2>

<div>
    <h4>Are you sure you want to delete this employee?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Age
        </dt>
        <dd class="col-sm-10">
            @Model.Age
        </dd>
        <dt class="col-sm-2">
            Salary
        </dt>
        <dd class="col-sm-10">
            @Model.Salary
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Office
        </dt>
        <dd class="col-sm-10">
            @Model.Office.Name
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-controller="Employee" asp-route-id="@Model.Id" method="post">
        <p>
            <button type="submit" class="btn btn-danger">Delete</button> |
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </p>
    </form>
</div>
