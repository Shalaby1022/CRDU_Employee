@model Employee
@{
    var offices = ViewBag.Offices as List<Office>;
}

<h2>Create New Employee</h2>

<form asp-controller="Employee" asp-action="Create" method="post">

    <div class="form-group">
        <label for="Name">Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="Age">Age</label>
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Age, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="Salary">Salary</label>
        @Html.TextBoxFor(m => m.Salary, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Salary, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="OfficeId">Office</label>
        @Html.DropDownListFor(m => m.OfficeId, new SelectList(offices, "Id", "Name"), "Select Office", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.OfficeId, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
    </div>
    </form>


