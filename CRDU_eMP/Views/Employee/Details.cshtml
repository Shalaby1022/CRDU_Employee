@model Employee

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Employee Details</h2>

        @if (Model != null)
        {
            <table class="table table-bordered">
                <tr>
                    <th>Id</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th>Age</th>
                    <td>@Model.Age</td>
                </tr>
                <tr>
                    <th>Salary</th>
                    <td>@Model.Salary</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Office Id</th>
                    <td>@Model.OfficeId</td>
                </tr>
            </table>
        }
        else
        {
            <p>Employee not found.</p>
        }

        <p>
            <a href="@Url.Action("Index")" class="btn  btn-dark   ">Back to List</a>
            @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
        </p>
    </div>
</div>
