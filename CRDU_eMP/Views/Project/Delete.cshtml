@model CRDU_eMP.Models.Project

<h2>Delete Project</h2>

<div>
    <h4>Are you sure you want to delete this project?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>

    <form asp-controller="Project" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <p>
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </p>
    </form>
</div>
