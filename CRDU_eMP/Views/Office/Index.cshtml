@model List<CRDU_eMP.Models.Office>

<div class="container">
    <h2 class="mb-4">Office List</h2>

    @if (Model.Count > 0)
    {
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Location</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Count; i++)
                {
                    <tr class="@(i % 2 == 0 ? "table-primary" : "table-info")">
                        <td>@Model[i].Id</td>
                        <td>@Model[i].Name</td>
                        <td>@Model[i].Location</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a href="@Url.Action("Details", new { id = Model[i].Id })" class="btn btn-sm btn-info" title="Details"><i class="fas fa-info-circle"></i></a>
                                <a href="@Url.Action("Edit", new { id = Model[i].Id })" class="btn btn-sm btn-primary" title="Edit"><i class="fas fa-edit"></i></a>
                                <a href="@Url.Action("Delete", new { id = Model[i].Id })" class="btn btn-sm btn-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No offices found.</p>
    }

    <p><a href="@Url.Action("Create")" class="btn btn-success">Create New Office</a></p>
</div>
